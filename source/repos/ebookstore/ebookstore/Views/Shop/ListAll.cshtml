        @{
            int PrevPageNo = ViewBag.PageNo - 1;
            if (PrevPageNo <= 0)
            {
                PrevPageNo = 1;
            }
            int currentPage = ViewBag.PageNo;
            int NextPageNo = ViewBag.PageNo + 1;
            if (NextPageNo > ViewBag.NoOfPages)
            {
                NextPageNo = ViewBag.NoOfPages;
            }
        }
        
  <div style="position:relative;margin-left:20px;margin-top:500px;">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                  
                    <a class="page-link"  href="/Shop/ListAll?PageNo=@PrevPageNo">Prev</a>
                </li>
                @for (int i = 0; i < ViewBag.NoOfPages; i++)
                {
                    if ((i + 1) == ViewBag.PageNo)
                    {
                        <li class="page-item active">
                            <a class="page-link" href="/Shop/ListAll?PageNo=@(i + 1)">@(i + 1)</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="/Shop/ListAll?PageNo=@(i + 1)">@(i + 1)</a>
                        </li>
                    }
                }
                <li class="page-item">
                    <a class="page-link" href="/Shop/ListAll?PageNo=@NextPageNo">Next</a>
                </li>
            </ul>
      </div>
    

        
